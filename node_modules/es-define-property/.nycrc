{
	// Enable or disable coverage analysis for all files, not just those with a corresponding test file.
	"all": true,

	// Disable automatic checking of coverage percentages against a specified threshold.
	"check-coverage": false,

	// Define the output formats for the coverage report. In this case, the tool will generate text summaries, detailed text reports, HTML reports, and JSON reports.
	"reporter": ["text-summary", "text", "html", "json"],

	// Exclude specific files or directories from the analysis. Here, both the "coverage" and "test" directories are excluded.
	"exclude": [
		"coverage",
		"test"
	]
}

